{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": 0,

        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "camelcase": "warn",
        "array-bracket-spacing": [1, "never"],
        "object-curly-spacing": [1, "always"],
        "key-spacing": [1, { "mode": "minimum" }],
        "no-whitespace-before-property": 2,
        "jsx-quotes": 1,
        "indent": [1, 4, {
            "SwitchCase": 1,
            "CallExpression": { "arguments": "first" },
            "FunctionDeclaration": { "parameters": "first" },
            "FunctionExpression": { "parameters": "first" }
        }],
        "comma-dangle": "error",
        "comma-spacing": "warn",
        "comma-style": "warn",
        "consistent-return": "error",
        "consistent-this": "warn",
        "curly": "off",
        "dot-location": [1, "property"],
        "eol-last": "warn",
        "eqeqeq": "warn",
        "dot-notation": [1, { "allowKeywords": false }],
        "func-call-spacing": "warn",
        "arrow-spacing": 1,
        "arrow-parens": [1, "always"],
        "prefer-template": 1,
        "space-before-function-paren": "warn",
        "space-before-blocks": 1,
        "space-in-parens": 1,
        "space-infix-ops": 1,
        "space-unary-ops": 1,
        "spaced-comment": 1,
        "semi-spacing": 1,
        "quotes": [2, "single"],
        "quote-props": [2, "as-needed", { "keywords": true, "unnecessary": false, "numbers": true }],
        "operator-linebreak": 1,
        "operator-assignment": 1,
        "one-var-declaration-per-line": 1,
        "no-trailing-spaces": 1,
        "no-tabs": 1,
        "no-lonely-if": 1,
        "newline-per-chained-call": [1, { "ignoreChainWithDepth": 3 }],
        "max-statements-per-line": [1, { "max": 2 }],

        "prefer-const": 0,
        "linebreak-style": [2, "unix"],
        "new-parens": 1,
        "semi": 2,
        "no-undef": "error",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "no-unneeded-ternary": 1,
        "no-underscore-dangle": 1,
        "constructor-super": "warn",
        "valid-typeof": "warn",
        "default-case": "warn",
        "block-scoped-var": "warn",
        "no-else-return": 1,
        "no-empty": 2,
        "no-empty-function": 2,
        "no-empty-pattern": 2,
        "no-eq-null": 2,
        "no-global-assign": 2,
        "no-implicit-coercion": [1, { "boolean": false }],
        "no-invalid-this": 2,
        "no-invalid-regexp": 2,
        "no-labels": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 2,
        "no-magic-numbers": 0,
        "no-multi-spaces": [1, { "exceptions": { "VariableDeclarator": true, "Property": true, "ImportDeclaration": true } }],
        "keyword-spacing": 2,
        "no-multi-str": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-new": 2,
        "no-octal-escape": 2,
        "no-octal": 2,
        "no-redeclare": [2, { "builtinGlobals": true }],
        "no-return-assign": 2,
        "no-self-assign": 1,
        "no-self-compare": 1,
        "no-sequences": 2,
        "no-throw-literal": 1,
        "no-unused-expressions": 1,
        "no-useless-call": 1,
        "no-useless-concat": 1,
        "no-useless-escape": 1,
        "no-void": 2,
        "no-with": 2,
        "radix": 1,
        "wrap-iife": 1
    }
}